              "set_variable": {
                "name": "fn_lock",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "fn_lock",
              "value": 1
            }
          ],
          "type": "basic"
        }
      ]
    },
