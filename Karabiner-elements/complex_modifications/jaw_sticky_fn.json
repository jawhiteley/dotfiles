{
  "title": "@jaw Fn lock for fn-keys",
  "rules": [
    {
      "description": "Fn lock: Cmd-Opt-Ctl-Fn -> toggle Fn lock",
      "manipulators": [
        {
          "description": "toggle Fn lock ON",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "mandatory": [ 
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "fn_lock",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "fn_lock",
              "value": 0
            }
          ],
          "type": "basic"
        },
        {
          "description": "toggle Fn lock OFF",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "mandatory": [ 
                "left_command",
                "left_control",
                "left_option"
              ],
              "optional": [ "any" ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "fn_lock",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "fn_lock",
              "value": 1
            }
          ],
          "type": "basic"
        }
      ]
    },
