{
  "title": "@jaw NumLock and NumPad media controls",
  "rules": [
    {
      "description": "NumPad NumLock",
      "manipulators": [
        {
          "description": "toggle num_lock ON",
          "from": {
            "key_code": "keypad_num_lock",
            "modifiers": { "optional": [ "any" ] }
          },
          "to": [
            {
              "set_variable": {
                "name": "num_lock",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "num_lock",
              "value": 0
            }
          ],
          "type": "basic"
        },
        {
          "description": "toggle num_lock OFF",
          "from": {
            "key_code": "keypad_num_lock",
            "modifiers": { "optional": [ "any" ] }
          },
          "to": [
            {
              "set_variable": {
                "name": "num_lock",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "num_lock",
              "value": 1
            }
          ],
          "type": "basic"
        }
      ]
    },
